                        <p class="font-numbers font-thin dark:text-primary-lgt sm:text-xl">
                            <%= tomorrow %>
                        </p>
                    </figure>
                    <figure class="flex flex-col justify-center items-center gap-3 sm:h-60">
                        <div class="flex items-center justify-center gap-2 ">
                            <div class="flex items-center justify-center w-24 h-28 py-4 px-2">
                                <img src="https://openweathermap.org/img/wn/<%= data_tomorrow.weather[0].icon %>@2x.png"
                                    alt="weather-icon" class=" w-full h-full">
                            </div>
                            <div class="flex flex-col gap-1">
                                <figcaption>
                                    <p style="text-shadow: 0px 4px 4px #00000040;"
                                        class="text-lg font-normal sm:text-xl">
                                        <%= data_tomorrow.weather[0].description.charAt(0).toUpperCase()%>
                                            <%= data_tomorrow.weather[0].description.slice(1)%>
                                    </p>
                                </figcaption>
                                <p style="text-shadow: 0px 4px 4px #00000040;"
